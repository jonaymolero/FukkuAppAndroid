<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:onClick="pulsarCategoria"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorBackgroundChat" app:cardCornerRadius="10dp"
                                    android:id="@+id/cvCategoria"
                                    android:layout_marginBottom="5dp"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/ivIconoProducto" android:layout_weight="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:layout_width="264dp"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/tvNombreCategoria" android:layout_weight="1"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
                app:layout_constraintStart_toEndOf="@+id/ivIconoProducto" android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorPrimary" android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>